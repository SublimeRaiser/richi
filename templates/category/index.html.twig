        <a href="{{ path('category_new', {'operationName': 'expense'}) }}">Add expense category</a> |
        <a href="{{ path('category_new', {'operationName': 'income'}) }}">Add income category</a>
    </div>
    <h1>Expense categories:</h1>
    {% include 'category/_category_list.html.twig' with {'categories': expenseCategories} %}
