{% extends 'base.html.twig' %}

{% block title %}Debt list{% endblock %}

{% block body %}
    <div style="float: right">
        <a href="{{ path('debt_new') }}">Add debt</a>
    </div>
    {% for debtSummary in debtSummaries %}
        <p>Date: {{ debtSummary.date|date_human }}</p>
        {{ include('debt/_summary.html.twig') }}
        <p>
            <a href="{{ path('debt_show', {'id': debtSummary.debt.id}) }}">View</a>
        </p>
        <hr>
    {% else %}
        <p>Congrats! There are no debts.</p>
    {% endfor %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {{ encore_entry_script_tags('debt') }}
{% endblock %}