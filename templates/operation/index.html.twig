{% extends 'base.html.twig' %}

{% block title %}Operation list{% endblock %}

{% block body %}
    <div style="float: right">
        <a href="{{ path('operation_new', {'operationName': 'expense'}) }}">Add expense</a> |
        <a href="{{ path('operation_new', {'operationName': 'income'}) }}">Add income</a> |
        <a href="{{ path('operation_new', {'operationName': 'transfer'}) }}">Add transfer</a>
    </div>
    <div style="padding-left: 350px; padding-right: 200px">
        <h1>Operations:</h1>
        {% for operationDate, operationGroup in groupedOperations %}
            <div style="color: gray">
                {{ operationDate|format_date }}
            </div>
            <div>
                {% for operation in operationGroup %}
                    <div>
                        <p style="margin-top: 8px; margin-bottom: 0">
                            <span style="display: inline-block">
                                {% if operation.description is not empty %}
                                    {{ operation.description }}
                                {% elseif operation.category is not empty %}
                                    {{ operation.category.name }}
                                {% else %}
                                    {{ operation.type|operation_name }}
                                {% endif %}
                            </span>
                            <span style="float: right">{{ operation.amount|currency }}</span>
                        </p>
                        <p style="margin: 0;">
                            <span style="float: left; font-size: small; color: gray">
                                {% if operation.type == constant('App\\Enum\\OperationTypeEnum::TYPE_INCOME') %}
                                    {{ operation.target }}
                                {% endif %}
                                {% if operation.type == constant('App\\Enum\\OperationTypeEnum::TYPE_EXPENSE') %}
                                    {{ operation.source }}
                                {% endif %}
                                {% if operation.type == constant('App\\Enum\\OperationTypeEnum::TYPE_TRANSFER') %}
                                    {{ operation.source }} > {{ operation.target }}
                                {% endif %}
                                {% if operation.person %}
                                    [{{ operation.person.name }}]
                                {% endif %}
                            </span>
                            {% if operation.category %}
                                <span style="float: right; font-size: small; color: gray">
                                    {{ operation.category.name }}
                                </span>
                            {% endif %}
                            <span style="display: block; clear: both"></span>
                        </p>
                    </div>
                {% endfor %}
            </div>
            <hr>
        {% endfor %}
    </div>



    <br>
    <br>
    <br>
    <br>
    <br>

    <table>
        <thead>
        <th>Date</th>
        <th>Source</th>
        <th>Target</th>
        <th>Amount</th>
        <th>Category</th>
        <th>Description</th>
        <th>Person</th>
        <th>Created</th>
        <th>Updated</th>
        <th>Actions</th>
        </thead>
        <tbody>
        {% for operation in plainOperationList %}
            <tr>
                <td>{{ operation.date|date('d.m.Y') }}</td>
                <td>{% if operation.source is not null %}{{ operation.source.name }}{% endif %}</td>
                <td>{% if operation.target is not null %}{{ operation.target.name }}{% endif %}</td>
                <td align="right">{{ operation.amount|currency }}</td>
                <td>{% if operation.category is not null %}{{ operation.category }}{% endif %}</td>
                <td>{{ operation.description }}</td>
                <td>{% if operation.person %}{{ operation.person.name }}{% endif %}</td>
                <td>{{ operation.createdAt|date('d.m.Y H:i:s') }}</td>
                <td>{{ operation.updatedAt|date('d.m.Y H:i:s') }}</td>
                <td>
                    <a href="{{ path('operation_edit', {'id': operation.id}) }}">Edit</a>
                    <a href="#"
                       class="js-operation-delete"
                       data-url="{{ path('operation_delete', {'id': operation.id}) }}">Delete</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {{ encore_entry_script_tags('operation') }}
{% endblock %}
