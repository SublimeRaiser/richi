{% extends 'base.html.twig' %}

{% block title %}New transfer{% endblock %}

{% block body %}
    <h1>Create new transfer:</h1>
    {{ form_start(operationForm) }}
        {{ form_row(operationForm.date) }}
        {{ form_row(operationForm.source) }}
        {{ form_row(operationForm.target) }}
        {{ form_row(operationForm.amount) }}
        {{ form_row(operationForm.description) }}
        {{ form_row(operationForm._token) }}
        <button type="submit">Save new transfer operation</button>
    {{ form_end(operationForm, {'render_rest': false}) }}
{% endblock %}
