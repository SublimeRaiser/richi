{% extends 'base.html.twig' %}

{% block title %}Balance details{% endblock %}

{% block body %}
    {% for accountBalance in accountBalances %}
        <p>{{ accountBalance.account }}: {{ accountBalance.value|currency }}</p>
    {% endfor %}

    <p>
        <strong>Total: {{ total|currency }}
            {% if fundBalance != 0 %}
                <span>(own funds: {{ (total-fundBalance)|currency }})</span>
            {% endif %}
        </strong>
    </p>
{% endblock %}
