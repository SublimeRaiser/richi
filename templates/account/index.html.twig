{% extends 'base.html.twig' %}

{% block title %}Account list{% endblock %}

{% block body %}
    <div style="float: right">
        <a href="{{ path('account_new') }}">Add account</a>
    </div>
    <h1>Accounts:</h1>
    <table>
        <thead>
            <th>Icon</th>
            <th>Name</th>
            <th>Created</th>
            <th>Updated</th>
            <th>Actions</th>
        </thead>
        <tbody>
        {% for account in accounts %}
            <tr>
                <td><img src="#" alt=""></td>
                <td>{{ account }}</td>
                <td>{{ account.createdAt|date('d.m.Y H:i:s') }}</td>
                <td>{{ account.updatedAt|date('d.m.Y H:i:s') }}</td>
                <td>
                    <a href="{{ path('account_edit', {'id': account.id}) }}">Edit</a>
                    <a href="#"
                       class="js-account-delete"
                       data-name="{{ account.name }}"
                       data-url="{{ path('account_delete', {'id': account.id}) }}">Delete</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {{ encore_entry_script_tags('account') }}
{% endblock %}
